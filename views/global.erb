<h1> POSTS </h1>
    <% $posts.each do |post| %>
        <% if post.post_category == 'global' %>
        <h3> <%= post.post_title %> </h3>
        <p> <%= post.author %> </p>
        <p> <%= post.post_content %> </p>
        <% end %>
    <% end %>